{
  "name": "@apps-in-toss/unity-sdk-generator",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Automatic Unity SDK generator from TypeScript definitions",
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "generate": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prebuild": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "handlebars": "^4.7.8",
    "picocolors": "^1.1.1",
    "ts-morph": "^23.0.0"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
