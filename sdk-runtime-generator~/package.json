{
  "name": "@apps-in-toss/unity-sdk-generator",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Automatic Unity SDK generator from TypeScript definitions",
  "scripts": {
    "build": "pnpm exec tsc && pnpm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "generate": "pnpm run build && node dist/index.js generate",
    "format": "pnpm run build && node dist/index.js format",
    "validate": "cd tests/unit && npm test",
    "dev": "tsx src/index.ts generate",
    "prebuild": "rm -rf dist",
    "test": "cd tests/unit && npm test",
    "test:watch": "cd tests/unit && npm run test:watch",
    "test:tier1": "cd tests/unit && npm run test:tier1"
  },
  "pnpm": {
    "overrides": {
      "@granite-js/plugin-core": "0.1.30"
    }
  },
  "dependencies": {
    "@apps-in-toss/web-framework": "1.5.2",
    "commander": "^12.1.0",
    "handlebars": "^4.7.8",
    "picocolors": "^1.1.1",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
